<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="static_template" name="static template">
        <t t-call="website.layout">
        <h4><strong>welcome to real estate STATIC website</strong></h4>
        </t>
    </template>

    <template id="dynamic_template">
        <t t-call="website.layout">
        <center><h4><strong>Hello <t t-out="user.name"/></strong></h4></center>
        <div><t t-out="SomeAdditionalData"/></div>
        <div class="table">
            <center>
            <table>
                <thead>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>State</th>
                </thead>
                <tbody>
                    <t t-set="sequence" t-value="0"/>
                    <t t-foreach="properties" t-as="property">
                        <t t-set="sequence" t-value="sequence + 1"/>
                        <tr t-attf-style="font-weight: bold;#{sequence % 2 == 0 and 'background: grey;' or ''}">
                            <td><t t-out="sequence" /></td>
                            <td>
                                <a t-attf-href="/property/#{property.id}">
                                    <t t-out="property.name" />
                                </a>
                            </td>
                            <td>
                                <t t-if="property.description" t-out="property.description" />
                                <t t-else="">No Description Available</t>
                            </td>
                            <td><span t-field="property.state"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
            </center>
        </div>
        </t>
    </template>

    <template id="hello_template_user" name="hello template user">
            <t t-call="Real_estate.dynamic_template">
            </t>
    </template>

    <template id="property_details_css" name="property details css">
        <style>
            * {
                box-sizing: border-box;
            }
            .container0{
                width: 100%;
                display: flex;
                padding: 20px;
                justify-content: center;
            }
            .container_left{
                width:40%;
                display:flex;
                align-items: center;
                justify-content: center;
            }
            .container_right{
                width:40%;
                display: flex;
                flex-direction: column;
                justify-content: space-around;
            }
            .container_right>div{
                max-width: max-content;
            }

            .openOfferBtn {
                display: flex;
                justify-content: left;
            }
            .openOfferButton {
                border: none;
                border-radius: 5px;
                background-color: #1c87c9;
                color: white;
                padding: 14px 20px;
                cursor: pointer;
                position: fixed;
            }
            .offerPopup {
                position: relative;
                text-align: center;
                width: 100%;
            }
            .offerFormPopup {
                display: none;
                position: fixed;
                left: 45%;
                top: 5%;
                transform: translate(-50%, 5%);
                border: 3px solid #999999;
                z-index: 9;
            }
            .offerFormContainer {
                max-width: 300px;
                padding: 20px;
                background-color: #fff;
            }
            .offerFormContainer input[type=text],
            .offerFormContainer input[type=password] {
                width: 100%;
                padding: 15px;
                margin: 5px 0 20px 0;
                border: none;
                background: #eee;
            }
            .offerFormContainer input[type=text]:focus,
            .offerFormContainer input[type=number]:focus {
                background-color: #ddd;
                outline: none;
            }
            .offerFormContainer .btn {
                padding: 12px 20px;
                border: none;
                background-color: #8ebf42;
                color: #fff;
                cursor: pointer;
                width: 100%;
                margin-bottom: 15px;
                opacity: 0.8;
            }
            .offerFormContainer .cancel {
                background-color: #cc0000;
            }
            .offerFormContainer .btn:hover,
            .openOfferButton:hover {
                opacity: 1;
            }
        </style>
    </template>

    <template id="property_details" name="property_details">
        <t t-call="Real_estate.property_details_css"/>
        
        <div t-call="website.layout">
            <div class="container0">
                <div class="container_left">
                        <t t-set="sequence0" t-value="1"/>
                        <img src="/Real_estate/static/src/img/left_arrow.png" width="64px" height="64px" onclick="slide_img_left()"/>
                        <t t-foreach="property.image_ids" t-as="prop_image">
                            <div t-attf-id="property-image-#{sequence0}" style="display:none;">
                                <img t-attf-src="data:image/jpg;base64,#{prop_image.image}" style="padding:50px -32px;" width="400px" height="auto"/>
                            </div>
                            <t t-set="sequence0" t-value="sequence0 + 1"/>
                        </t>
                        <img src="/Real_estate/static/src/img/right_arrow.png" width="64px" height="64px" onclick="slide_img_right()"/>
                        <span id="totalImageNo" style="display:none"><t t-esc="sequence0 - 1"/></span>
                </div>
                <script>
                    let current_image;
                    const total_image = parseInt(document.getElementById("totalImageNo").innerHTML);
                    if (total_image>0){
                        current_image=1;
                        document.getElementById("property-image-"+current_image).style="display:block";
                    }
                    const slide_img_right = () => {
                        document.getElementById("property-image-"+current_image).style="display:none";
                        if(current_image+1>total_image){
                            current_image=1;
                            document.getElementById("property-image-"+current_image).style="display:block";
                        }
                        else{
                            current_image++;
                            document.getElementById("property-image-"+current_image).style="display:block";
                        }
                    }
                    const slide_img_left = () => {
                        document.getElementById("property-image-"+current_image).style="display:none";
                        if(current_image==1){
                            current_image=total_image;
                            document.getElementById("property-image-"+current_image).style="display:block";
                        }
                        else{
                            current_image--;
                            document.getElementById("property-image-"+current_image).style="display:block";
                        }
                    }

                    function openOfferForm() {
                        document.getElementById("popupFormOffer").style.display = "block";
                    }
                    function closeOfferForm() {
                        document.getElementById("popupFormOffer").style.display = "none";
                    }
                    
                </script>
                <div class="container_right">
                    <center>
                        <div>
                            <div class="font-weight-bold"><span t-field="property.name"/></div>
                            <div><b>Property State:</b> <t t-out="property.state"/></div>
                            <div><b>Best Offer:</b> <span t-out="property.best_price"/></div>
                        </div>
                        <div class="openOfferBtn">
                            <button class="openOfferButton" onclick="openOfferForm()"><strong>Open Form</strong></button>
                        </div>
                        <div class="offerPopup">
                            <div class="offerFormPopup" id="popupFormOffer">
                                <form t-attf-action="/offer_confirm_mail/#{property.id}" class="offerFormContainer" method="post">
                                    <h2>Send Offer</h2>
                                    <label for="email">
                                        <strong>E-mail</strong>
                                    </label>
                                    <input type="text" placeholder="Your Email" name="email" required="true"/>
                                    <label for="price">
                                        <strong>Offer Price</strong>
                                    </label>
                                    <input type="number" placeholder="offer price" name="offerPrice" required="true"/>
                                    <button type="submit" class="btn">Send</button>
                                    <button type="button" class="btn cancel" onclick="closeOfferForm()">Close</button>
                                </form>
                            </div>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </template>

</odoo>