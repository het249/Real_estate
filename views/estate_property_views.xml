<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_state_published':1}</field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">Property tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property tree">
                <field name="id"/>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="bathrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_images_view_tree" model="ir.ui.view">
        <field name="name">Property tree</field>
        <field name="model">estate.property.images</field>
        <field name="arch" type="xml">
            <tree string="Images">
                <field name="property_id"/>
                <field name="image" widget="image"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_kanban" model="ir.ui.view">
        <field name="name">Estate Property Kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <ul>
                                    <li><field name="tag_ids"/></li>
                                    <li>Expected price: <field name="expected_price"/></li>
                                    <li>Selling price: <field name="selling_price"/></li>
                                </ul>
                                <button class="btn btn-primary" name="open_offer" type="object" >
                                    <span>Confirm Offer</span>

                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_kanban1" model="ir.actions.act_window.view">
           <field name="view_mode">kanban</field>
           <field name="view_id" ref="estate_property_kanban" />
           <field name="act_window_id" ref="estate_property_action" />
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">Estate Property form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="property">
                <header>
                    <button name="action_sold" type="object" string="Sold" class="oe_highlight" attrs="{'invisible': [('state','in',['sold','canceled'])] }"/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" attrs="{'invisible': [('state','in',['sold','canceled'])] }"/>
                    <field name="state" widget="statusbar" statusbar_visible="publish pending,new,offer received,offer accepted,sold,canceled"/>
                </header>
                <sheet>
                    <span style="font-size:50px;font-weight:900;color:blue"><field name="name"/></span>
                    <br/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <br/>
                    <br/>
                    <group>
                        <group>
                            <field name="image_ids" widget="many2many_kanban"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="best_price"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="bathrooms"/>
                                <field name="kitchen"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                                
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <group cols="6" colspan="4">
                                    <field name="offer_ids" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="seller_id"/>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">Property tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter string="Available" name="avail_property" domain="['|',('state', '=', 'new'),('state','=','offer received')]"/>
                <filter string="Postcode" name="group_postcode" context="{'group_by':'postcode'}"/>
                <filter name="current user" domain="[('salesperson_id', '=', uid)]"/>
                <filter name="garden" domain="[('garden', '=', True)]"/>
                <filter name="state_published" domain="[('state','!=','publish pending')]"/>
                <filter name="state_not_published" domain="[('state','=','publish pending')]"/>
                 <filter name="4 or more bedrooms" domain="[('bedrooms', '>', 3)]"/>
                <filter name="Properties with Garage" domain="[('garage', '=', True)]"/>
                <filter name="2 bedrooms with garden" domain="[('bedrooms', '=', 2),('garage', '=', True)]"/>
                <group expand="1" string="Group By"> 
                    <filter string="Postal Code" name="postcode" context="{'group_by': 'postcode'}"/>
                    <filter string="Number of bedrooms" name="bedrooms" context="{'group_by': 'bedrooms'}"/>
                    <filter string="Property Type" name="property_type_id" context="{'group_by': 'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="property_types_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="property_types_view_tree" model="ir.ui.view">
        <field name="name">Property types tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <field name="property_ids">
                    <tree>
                        <field name="name"/>
                        <field name="expected_price"/>
                        <field name="status"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="property_offer_view_tree" model="ir.ui.view">
        <field name="name">Property Offers tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property tree">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="property_id" attrs="{'invisible': [(1,'=',1)] }"/>
                <field name="date_deadline"/>
                <field name="prop_state" invisible="1"/>
                <field name="validity" string="Validity(Days)"/>
                    <button name="action_accepted" string="Accept" type="object" icon="fa-check" attrs="{'invisible': [('prop_state','in',['offer accepted','sold','canceled'])] }"/>
                    <button name="action_refused" string="Refuse" type="object" icon="fa-times" attrs="{'invisible': [('prop_state','in',['offer accepted','sold','canceled'])] }"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="property_offer_view_form" model="ir.ui.view">
        <field name="name">Property Offers form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="offer form">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="date_deadline"/>
                <field name="validity" string="Validity(Days)"/>
            </form>
        </field>
    </record>

</odoo>